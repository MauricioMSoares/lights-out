<h1 class="text-center text-4xl mb-6 font-bold font-mono">Lights Out</h1>
<div class="flex flex-col max-w-lg mx-auto">
  <div class="grid grid-rows-5 grid-cols-5 gap-2 mb-4">
    <%= for {{x, y}, value} <- @grid do %>
      <button
        class="block h-20 px-4 py-6 text-center border rounded bg-stone-300"
        phx-click="toggle"
        phx-value-x={x}
        phx-value-y={y}
        data-on={value}
      >
      </button>
    <% end %>
  </div>
  <p class="text-center">NÂº of clicks: <%= @clicks %></p>
  <p :if={@win} class="text-3xl text-center">You won!</p>
  <div class="flex justify-center">
    <button :if={@win} class="bg-black text-white w-24 px-2 py-2 font-semibold rounded-xl mt-4" phx-click="restart">
      Play again
    </button>
  </div>
</div>
