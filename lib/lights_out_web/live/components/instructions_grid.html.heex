<div>
  <div class="grid grid-rows-3 grid-cols-3 gap-1 mb-4 w-52">
    <%= for {{x, y}, value} <- @grid do %>
      <button
        class="block h-16 w-16 px-4 py-2 text-center border rounded bg-stone-300"
        phx-click="toggle"
        phx-value-x={x}
        phx-value-y={y}
        data-on={if({x, y} in @default_true, do: true, else: false)}
      >
      </button>
    <% end %>
  </div>
  <p class="w-52"><%= @text %></p>
</div>
